{
  "name": "pw_tests",
  "version": "1.0.0",
  "description": "AQA_module_PW",
  "keywords": [
    "AQA_course_PW"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DorityTM/PW"
  },
  "license": "ISC",
  "author": "Tatsiana Davidziuk",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "test:ui": "npx playwright test",
    "ui-mode": "npx playwright test --ui",
    "test": "npx playwright test",
    "test:ui:regression": "npx playwright test --project=sales-portal-ui --grep @regression|@smoke",
    "test:ui:smoke": "npm run test -- --project=sales-portal-ui --grep @smoke",
    "html-report-open": "npx playwright show-report",
    "allure-report": "allure generate allure-results -o allure-report --clean",
    "allure-report-open": "npm run allure-report && allure open allure-report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --config .prettierrc src/**/*.ts --check src/",
    "prettier:fix": "prettier --config .prettierrc src/**/*.ts --write src/",
    "format": " npm run prettier && npm run lint",
    "format:fix": "npm run prettier:fix && npm run lint:fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.0",
    "@types/bson": "^4.0.5",
    "@types/dotenv": "^6.1.1",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bson": "^7.0.0",
    "dotenv": "^17.2.3",
    "faker": "^5.5.3",
    "lodash": "^4.17.21",
    "moment": "^2.30.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
